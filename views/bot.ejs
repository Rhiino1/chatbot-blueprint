<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <title>Document</title>
</head>
<body>
    <div id="app">
        {{ message }}
    </div>

    <div id="app-2">
        <span v-bind:title="message">
          Hover your mouse over me for a few seconds
          to see my dynamically bound title!
        </span>
    </div>

    <div id="app-3">
        <span v-if="seen">Now you see me</span>
    </div>

    <div id="app-4">
        <ol>
          <li v-for="todo in todos">
            {{ todo.text }}
          </li>
        </ol>
    </div>

    <div id="app-5">
        <p>{{ message }}</p>
        <button v-on:click="reverseMessage">Reverse Message</button>
      </div>

    <div id="main">
    </div>

    <button onclick="stopTimer()">stop</button>
    <button onclick="initTimer()">init</button>
    <button onclick="refreshTimer()">refresh</button>
    <script>
        function refreshTimer() {
            fetch('http://127.0.0.1:8000/bot/refreshTimer', {
                method: 'POST',
            }).then(response => {
                console.log(response);
            })
        }


        function stopTimer() {
            fetch('http://127.0.0.1:8000/bot/stopTimer', {
                method: 'POST',
            }).then(response => {
                console.log(response);
            })
        }

        function initTimer() {
            fetch('http://127.0.0.1:8000/bot/initTimer', {
                method: 'POST',
                body: '5000'
            }).then(response => {
                console.log(response);
            })
        }
    </script>
    <script src="./scripts/bot.js"></script>
</body>
</html>
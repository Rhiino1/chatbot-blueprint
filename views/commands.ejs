<body class="fixed-top" style="background-color: #01010F;">
  <div class="row">
    <div class="col-sm-2">
      <div id="menuListDiv">
        <div class="h1 text-white text-center border-bottom border-primary" style="padding-bottom: .5rem">SRE</div>
        <nav>
          <a class="h5 nav-link" href="/"><i class="fa fa-fw fa-home"></i> Home</a>
          <a class="h5 nav-link" href="/commands"><i class="fa fa-fw fa-file"></i>Commands</a>
          <a class="h5 nav-link" href="/timers"><i class="fa fa-fw fa-clock"></i>Timers</a>
          <a class="h5 nav-link" href="/schedule">Schedule</a>
          <a class="h5 nav-link disabled" href="/doc">Documentation</a>
        </nav>
      </div>
    </div>
    <div class="col-xs-1"></div>
    <div class="col-7">
      <div class="row">
        <div class="row" style="margin-top: 4em">
          <div class="col-10">
            <span class="h2 text-white">Commands</span>
          </div>
          <div class="col-1"></div>
          <div class="row streamDiv">
            <div class="container" id="commandsList">
              <div class="table-responsive">
                <table class="table table-dark table-striped table-hover table-bordered" id="commandTable">
                  <thead class="thead" style="color: black;">
                    <th scope="col">#</th>
                    <th scope="col">NAME</th>
                    <th scope="col">DESCRIPTION</th>
                    <th scope="col">LEVEL</th>
                    <th scope="col">ACTIVE</th>
                  </thead>
                  <tbody>
                    <tr v-for="(command, index) in show">
                      <td v-text="index+1"></td>
                      <td v-text="command.name"></td>
                      <td v-text="command.note"></td>
                      <td v-text="command.permissionLevel"></td>
                      <td v-text="command.active"></td>
                    </tr>
                  </tbody>
                  <tfoot>
                    <td><input class="btn-primary" type="button" id="cargar_primera_pagina" value="<< Primero" v-on:click="firstTable" /></td>
                    <td><input class="btn-primary" type="button" id="cargar_anterior_pagina" value="< Anterior" v-on:click="reverseTable"/></td>
                    <td class="text-center" id="indicador_paginas"></td>
                    <td><input class="btn-primary" type="button" id="cargar_siguiente_pagina" value="Siguiente >" v-on:click="updateTable" /></td>
                    <td><input class="btn-primary" type="button" id="cargar_ultima_pagina" value="Ultimo >>" v-on:click="lastTable" /></td>
                  </tfoot>
                </table>
              </div>

